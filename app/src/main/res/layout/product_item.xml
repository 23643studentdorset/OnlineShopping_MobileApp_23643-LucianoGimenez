<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/background_light">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/product_image_product_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingVertical="5dp"
        android:src="@drawable/bag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/background_light2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/product_image_product_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Fjallraven - Foldsack No. 1 Backpack, Fits 15 Laptops" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="225dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toEndOf="@+id/product_image_product_item"
        app:layout_constraintTop_toTopOf="@+id/product_image_product_item"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/description_product_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/background_light2"
            tools:text="Your perfect pack for everyday use and walks in the forest. Stash your laptop (up to 15 inches) in the padded sleeve, your everyday" />
    </ScrollView>

    <TextView
        android:id="@+id/price_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/background_light2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.771"
        tools:text="109.95" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/currency"
        android:textColor="@color/background_light2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_image_product_item"
        app:layout_constraintTop_toTopOf="@+id/price_product_item"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/add_to_cart_button_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:text="@string/add_to_Cart"
        android:textColor="@color/background"
        app:layout_constraintBottom_toBottomOf="@+id/price_product_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/price_product_item"
        app:layout_constraintTop_toTopOf="@+id/price_product_item"
        app:layout_constraintVertical_bias="0.481" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate"
        android:textColor="@color/background_light2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rate_product_item"
        app:layout_constraintEnd_toStartOf="@+id/rate_product_item"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rate_product_item"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rate_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:textColor="@color/background_light2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/price_product_item"
        app:layout_constraintEnd_toStartOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/price_product_item"
        app:layout_constraintVertical_bias="0.0"
        tools:text="3.9" />

</androidx.constraintlayout.widget.ConstraintLayout>